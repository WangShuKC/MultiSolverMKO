<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".topsis_ahp.ahp.AhpThreeProcess"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="10dp"
    android:stretchColumns="1,2,3">

    <TableRow>

        <EditText
            android:id="@+id/threekriter1"
            android:layout_width="98dp"
            android:layout_column="1"
            android:gravity="center"
            android:hint="Kriter 1"
            android:inputType="text"
            android:padding="20dp"
            android:textColor="@color/turkuazmavi"
            android:textColorHint="@color/turkuazmavi"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/threekriter2"
            android:hint="Kriter 2"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="@color/turkuazmavi"
            android:textColorHint="@color/turkuazmavi"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_column="1"
            android:inputType="text"/>
        <EditText
            android:id="@+id/threekriter3"
            android:hint="Kriter 3"
            android:textSize="16dp"
            android:textColor="@color/turkuazmavi"
            android:textColorHint="@color/turkuazmavi"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_column="1"
            android:inputType="text"/>


    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/threebirbir"
            android:layout_width="98dp"
            android:layout_column="1"
            android:gravity="center"
            android:text="1"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textColor="@color/colorErrorAlert"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/threebiriki"
            android:hint="Değer"
            android:textSize="16dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:padding="10dp"
            android:layout_column="1"
            android:inputType="numberDecimal"/>
        <EditText
            android:id="@+id/threebiruc"
            android:hint="Değer"
            android:textSize="16dp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_column="1"
            android:inputType="numberDecimal"/>


    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/threeikibir"
            android:layout_width="98dp"
            android:layout_column="1"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:clickable="false"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/threeikiiki"
            android:text="1"
            android:textSize="16dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorErrorAlert"
            android:padding="10dp"
            android:layout_column="1"
            android:inputType="numberDecimal"/>
        <EditText
            android:id="@+id/threeikiuc"
            android:hint="Değer"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_column="1"
            android:inputType="numberDecimal"/>


    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/threeucbir"
            android:layout_width="98dp"
            android:layout_column="1"
            android:gravity="center"
            android:clickable="false"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/threeuciki"
            android:textSize="16dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:padding="10dp"
            android:layout_column="1"
            android:inputType="numberDecimal"/>
        <TextView
            android:id="@+id/threeucuc"
            android:text="1"
            android:textSize="16dp"
            android:textColor="@color/colorErrorAlert"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_column="1"
            android:inputType="numberDecimal"/>


    </TableRow>

    <Button
        android:id="@+id/threetablotamamlabutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="tablotamamla"
        android:text="Tabloyu Tamamla"/>

    <TextView
        android:id="@+id/threenot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textSize="15sp"
        android:text="DİKKAT"/>

    <TextView
        android:id="@+id/threeaciklamatext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:textSize="15sp"
        android:text="Değer yazan yerlere kriterleriniz için değerleri girebilirsiniz. Kalan boşlukları hesaplamak için 'Tabloyu Tamamla' Butonuna tıklayınız.. "/>

    <Button
        android:id="@+id/threehesaplabutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="hesaplaButton"
        android:text="Hesapla"/>


</TableLayout>