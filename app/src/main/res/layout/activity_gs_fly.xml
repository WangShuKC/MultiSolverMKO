<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".problemler.gsmaps.GsFly">

    <Button
        android:id="@+id/buttonfly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="Fly"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonroad"
        app:layout_constraintEnd_toStartOf="@+id/buttonroad"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonroad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="1dp"
        android:text="Road"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonfly"
        app:layout_constraintTop_toBottomOf="@+id/editTextFly" />

    <EditText
        android:id="@+id/editTextFly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="103dp"
        android:ems="10"
        android:textColor="@color/colorWhite"
        android:inputType="textPersonName"
        android:hint="Kaç şehir seçeceksiniz?"
        android:textColorHint="@color/colorWhite"
        app:layout_constraintStart_toStartOf="@+id/buttonfly"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>