<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".topsis_ahp.ahp.AhpFourCriteriaActivity"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="10dp"
    android:stretchColumns="1,2,3,4">

    <TableRow>

        <EditText
            android:id="@+id/criteriaOne"
            android:layout_width="98dp"
            android:layout_column="1"
            android:gravity="center"
            android:hint="@string/criteria_1"
            android:inputType="text"
            android:padding="20dp"
            android:textColor="@color/turkuaz"
            android:textColorHint="@color/turkuaz"
            android:textSize="14sp"
            android:textStyle="bold"
            android:autofillHints="" />

        <EditText
            android:id="@+id/criteriaTwo"
            android:hint="@string/criteria_2"
            android:textSize="14sp"
            android:textColor="@color/turkuaz"
            android:textColorHint="@color/turkuaz"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_column="1"
            android:inputType="text"
            android:autofillHints="" />

        <EditText
            android:id="@+id/criteriaThree"
            android:hint="@string/criteria_3"
            android:textSize="14sp"
            android:textColor="@color/turkuaz"
            android:textColorHint="@color/turkuaz"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_column="1"
            android:inputType="text"
            android:autofillHints="" />

        <EditText
            android:id="@+id/criteriaFour"
            android:hint="@string/criteria_4"
            android:textSize="14sp"
            android:textColor="@color/turkuaz"
            android:textColorHint="@color/turkuaz"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_column="1"
            android:inputType="text"
            android:autofillHints="" />

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/oneOne"
            android:layout_width="98dp"
            android:layout_column="1"
            android:gravity="center"
            android:text="@string/_1"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textColor="@color/colorErrorAlert"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="TextViewEdits" />

        <EditText
            android:id="@+id/oneTwo"
            android:hint="@string/value"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_column="1"
            android:inputType="numberDecimal"
            android:autofillHints="" />

        <EditText
            android:id="@+id/oneThree"
            android:hint="@string/value"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_column="1"
            android:inputType="numberDecimal"
            android:autofillHints="" />

        <EditText
            android:id="@+id/oneFour"
            android:hint="@string/value"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_column="1"
            android:inputType="numberDecimal"
            android:autofillHints="" />

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/twoOne"
            android:layout_width="98dp"
            android:layout_column="1"
            android:gravity="center"
            android:clickable="false"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="TextViewEdits" />

        <TextView
            android:id="@+id/twoTwo"
            android:text="@string/_1"
            android:textSize="16sp"
            android:textColor="@color/colorErrorAlert"
            android:textColorHint="@color/colorWhite"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_column="1"
            android:inputType="numberDecimal"
            tools:ignore="TextViewEdits" />

        <EditText
            android:id="@+id/twoThree"
            android:hint="@string/value"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_column="1"
            android:inputType="numberDecimal"
            android:autofillHints="" />

        <EditText
            android:id="@+id/twoFour"
            android:hint="@string/value"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_column="1"
            android:inputType="numberDecimal"
            android:autofillHints="" />

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/threeOne"
            android:layout_width="98dp"
            android:layout_column="1"
            android:gravity="center"
            android:clickable="false"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="TextViewEdits" />

        <TextView
            android:id="@+id/threeTwo"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_column="1"
            android:inputType="numberDecimal"
            tools:ignore="TextViewEdits" />

        <TextView
            android:id="@+id/threeThree"
            android:text="@string/_1"
            android:textSize="16sp"
            android:textColor="@color/colorErrorAlert"
            android:textColorHint="@color/colorWhite"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_column="1"
            android:inputType="numberDecimal"
            tools:ignore="TextViewEdits" />

        <EditText
            android:id="@+id/threeFour"
            android:hint="@string/value"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_column="1"
            android:inputType="numberDecimal"
            android:autofillHints="" />

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/fourOne"
            android:layout_width="98dp"
            android:layout_column="1"
            android:gravity="center"
            android:clickable="false"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="TextViewEdits" />

        <TextView
            android:id="@+id/fourTwo"
            android:layout_column="1"
            android:clickable="false"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="TextViewEdits" />

        <TextView
            android:id="@+id/fourThree"
            android:textSize="16sp"
            android:clickable="false"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_column="1"
            android:inputType="numberDecimal"
            tools:ignore="TextViewEdits" />
        <TextView
            android:id="@+id/fourFour"
            android:text="@string/_1"
            android:textSize="16sp"
            android:textColor="@color/colorErrorAlert"
            android:textColorHint="@color/colorWhite"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_column="1"
            android:inputType="numberDecimal"
            tools:ignore="TextViewEdits" />

    </TableRow>

    <Button
        android:id="@+id/tableCompleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="tableComplete"
        android:background="@drawable/button_style"
        android:text="@string/complete_table"/>

    <TextView
        android:id="@+id/ahpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:text="@string/information"/>

    <TextView
        android:id="@+id/explanationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:textSize="15sp"
        android:text="@string/four_ahp_explanation"/>

    <Button
        android:id="@+id/calculationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="calculationButton"
        android:background="@drawable/button_style"
        android:text="@string/calculate"/>

</TableLayout>