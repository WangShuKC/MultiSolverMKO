<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".topsis_ahp.ahp.AhpFourProcess"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="10dp"
    android:stretchColumns="1,2,3,4">

    <TableRow>

        <EditText
            android:id="@+id/fourkriter1"
            android:layout_width="98dp"
            android:layout_column="1"
            android:gravity="center"
            android:hint="Kriter 1"
            android:inputType="text"
            android:padding="20dp"
            android:textColor="@color/turkuazmavi"
            android:textColorHint="@color/turkuazmavi"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/fourkriter2"
            android:hint="Kriter 2"
            android:textSize="16dp"
            android:textColor="@color/turkuazmavi"
            android:textColorHint="@color/turkuazmavi"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_column="1"
            android:inputType="text"/>
        <EditText
            android:id="@+id/fourkriter3"
            android:hint="Kriter 3"
            android:textSize="16dp"
            android:textColor="@color/turkuazmavi"
            android:textColorHint="@color/turkuazmavi"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_column="1"
            android:inputType="text"/>
        <EditText
            android:id="@+id/fourkriter4"
            android:hint="Kriter 4"
            android:textSize="16dp"
            android:textColor="@color/turkuazmavi"
            android:textColorHint="@color/turkuazmavi"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_column="1"
            android:inputType="text"/>

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/fourbirbir"
            android:layout_width="98dp"
            android:layout_column="1"
            android:gravity="center"
            android:text="1"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textColor="@color/colorErrorAlert"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/fourbiriki"
            android:hint="Değer"
            android:textSize="16dp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_column="1"
            android:inputType="numberDecimal"/>
        <EditText
            android:id="@+id/fourbiruc"
            android:hint="Değer"
            android:textSize="16dp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_column="1"
            android:inputType="numberDecimal"/>
        <EditText
            android:id="@+id/fourbirdort"
            android:hint="Değer"
            android:textSize="16dp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_column="1"
            android:inputType="numberDecimal"/>

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/fourikibir"
            android:layout_width="98dp"
            android:layout_column="1"
            android:gravity="center"
            android:clickable="false"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fourikiiki"
            android:text="1"
            android:textSize="16dp"
            android:textColor="@color/colorErrorAlert"
            android:textColorHint="@color/colorWhite"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_column="1"
            android:inputType="numberDecimal"/>
        <EditText
            android:id="@+id/fourikiuc"
            android:hint="Değer"
            android:textSize="16dp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_column="1"
            android:inputType="numberDecimal"/>
        <EditText
            android:id="@+id/fourikidort"
            android:hint="Değer"
            android:textSize="16dp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_column="1"
            android:inputType="numberDecimal"/>

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/fourucbir"
            android:layout_width="98dp"
            android:layout_column="1"
            android:gravity="center"
            android:clickable="false"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fouruciki"
            android:textSize="16dp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_column="1"
            android:inputType="numberDecimal"/>
        <TextView
            android:id="@+id/fourucuc"
            android:text="1"
            android:textSize="16dp"
            android:textColor="@color/colorErrorAlert"
            android:textColorHint="@color/colorWhite"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_column="1"
            android:inputType="numberDecimal"/>
        <EditText
            android:id="@+id/fourucdort"
            android:hint="Değer"
            android:textSize="16dp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_column="1"
            android:inputType="numberDecimal"/>

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/fourdortbir"
            android:layout_width="98dp"
            android:layout_column="1"
            android:gravity="center"
            android:clickable="false"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fourdortiki"
            android:layout_column="1"
            android:clickable="false"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fourdortuc"
            android:textSize="16dp"
            android:clickable="false"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_column="1"
            android:inputType="numberDecimal"/>
        <TextView
            android:id="@+id/fourdortdort"
            android:text="1"
            android:textSize="16dp"
            android:textColor="@color/colorErrorAlert"
            android:textColorHint="@color/colorWhite"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_column="1"
            android:inputType="numberDecimal"/>

    </TableRow>



    <Button
        android:id="@+id/fourtablotamamlabutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="tablotamamla"
        android:background="@drawable/buttonstyle"
        android:text="Tabloyu Tamamla"/>

    <TextView
        android:id="@+id/fournot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:text="DİKKAT"/>

    <TextView
        android:id="@+id/fouraciklamatext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:textSize="15sp"
        android:text="Değer yazan yerlere kriterleriniz için değerleri girebilirsiniz. Kalan boşlukları hesaplamak için 'Tabloyu Tamamla' Butonuna tıklayınız.. "/>

    <Button
        android:id="@+id/fourhesaplabutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="hesaplaButton"
        android:background="@drawable/buttonstyle"
        android:text="Hesapla"/>


</TableLayout>